<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true"
        android:top="-2dp"
        android:left="-2dp"
        android:right="-2dp"
        android:bottom="0dp">
        <shape
            android:shape="rectangle">
            <gradient
                android:startColor="@color/md_grey_300"
                android:endColor="@color/md_grey_300" />
            <stroke android:width="1dp" android:color="@color/md_deep_purple_50" />
        </shape>
    </item>

    <item
        android:top="-2dp"
        android:left="-2dp"
        android:right="-2dp"
        android:bottom="0dp">
        <shape>
            <gradient
                android:endColor="@color/md_white_1000"
                android:startColor="@color/md_white_1000"/>
            <stroke android:width="1dp" android:color="@color/md_deep_purple_50" />
        </shape>
    </item>
</selector>